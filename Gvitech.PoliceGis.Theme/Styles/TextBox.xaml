        <Setter Property="Height" Value="36"/>
        <Setter Property="CaretBrush" Value="{DynamicResource DefaultTextBoxForeground}"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Background" Value="{DynamicResource DefaultTextBoxBackground}"/>
        <Setter Property="BorderBrush" Value="#000000"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="IBeam"/>
        <Setter Property="Padding" Value="10,0,0,0"/>
        <Setter Property="AllowDrop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
        <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Controls:TextBoxHelper.IsNeedClearButton" Value="True"/>
        <Setter Property="Controls:TextBoxHelper.IsMonitoring" Value="True"/>
        <Setter Property="Controls:TextBoxHelper.IsVisibilityImage" Value="Collapsed"/>
        <Setter Property="Controls:TextBoxHelper.ImageSourcePath" Value="{x:Null}"/>
        <Setter Property="Controls:TextBoxHelper.Watermark" Value=""/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="enterGotFocus">
                            <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="tbMessage" Storyboard.TargetProperty="Opacity" To="0.2 "/>
                        </Storyboard>
                        <Storyboard x:Key="exitGotFocus">
                            <DoubleAnimation Duration="0:0:0.2"  Storyboard.TargetName="tbMessage" Storyboard.TargetProperty="Opacity" To="0.5"/>
                        </Storyboard>
                        <Storyboard x:Key="enterWatermarkAlart" TargetName="tbMessage" TargetProperty="Foreground.Color" Duration="2">
                            <ColorAnimation From="#B3BBC5" To="Red" Duration="0:0:0.5"/>
                            <ColorAnimation From="Red" To="#B3BBC5" BeginTime="0:0:0.5" Duration="0:0:0.5"/>
                            <ColorAnimation From="#B3BBC5" To="Red" BeginTime="0:0:1" Duration="0:0:0.5"/>
                            <ColorAnimation From="Red" To="#B3BBC5" BeginTime="0:0:1.5" Duration="0:0:0.5"/>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="0" AllowDrop="{TemplateBinding AllowDrop}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Margin="5" Visibility="{TemplateBinding Controls:TextBoxHelper.IsVisibilityImage}" Grid.Column="0" Height="20" Width="20" Source="{TemplateBinding Controls:TextBoxHelper.ImageSourcePath}"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            <TextBlock x:Name="tbMessage" Grid.Column="1" Margin="0,0" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           VerticalAlignment="Center" Panel.ZIndex="1"
                                           Padding="{TemplateBinding Padding}" AllowDrop="{TemplateBinding AllowDrop}"
                                           Visibility="Collapsed" IsHitTestVisible="False" 
                                           FontFamily="{TemplateBinding FontFamily}"
                                           Opacity="0.5" TextTrimming="CharacterEllipsis"
                                           Foreground="#B3BBC5" 
                                           Text="{TemplateBinding Controls:TextBoxHelper.Watermark}"/>
                                            
                            <ContentPresenter  Grid.Column="1" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" AllowDrop="{TemplateBinding AllowDrop}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <Button Grid.Column="2" x:Name="PART_ClearButton" Controls:TextBoxHelper.RegisterClearButton="True" Visibility="Collapsed" Style="{StaticResource btnPath_clear}"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}},Path=DataContext.FireWatermarkAnimation}" Value="true">
                            <DataTrigger.EnterActions>
                                <StopStoryboard BeginStoryboardName="WatermarkAlert"/>
                                <StopStoryboard BeginStoryboardName="emptyStoryboard"/>
                                <BeginStoryboard Name="WatermarkAlert"  Storyboard="{StaticResource enterWatermarkAlart}"/>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Controls:TextBoxHelper.IsNeedClearButton" Value="true"/>
                                <Condition Property="Controls:TextBoxHelper.HasText" Value="true"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_ClearButton" Property="Visibility" Value="Visible"/>
                        </MultiTrigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" TargetName="Bd" Value="{DynamicResource DefaultTextBoxIsEnabledB}"/>
                            <Setter Property="Foreground" Value="{DynamicResource DefaultTextBoxIsEnabledF}"/>
                        </Trigger>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="tbMessage" Property="Visibility" Value="Visible"/>
                            <Setter Property="Foreground" Value="{DynamicResource DefaultTextBoxForeground}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard Name="emptyStoryboard" Storyboard="{StaticResource enterWatermarkAlart}"/>
                            </Trigger.EnterActions>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" TargetName="Bd" Value="{DynamicResource DefaultTextBoxMouseOverBorder}"/>
                        </Trigger>
                        <Trigger Property="IsReadOnly" Value="True">
                        </Trigger>
                        <Trigger Property="IsFocused" Value="true">
                            <Setter Property="BorderBrush" TargetName="Bd" Value="{DynamicResource DefaultTextBoxMouseOverBorder}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource enterGotFocus}"/>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource exitGotFocus}"/>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

