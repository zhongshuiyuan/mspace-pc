    <Style x:Key="TbxWaterStyle" BasedOn="{x:Null}" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{DynamicResource DefaultFont}"/>
        <Setter Property="FontSize" Value="15px "/>
